<Page x:Class="Gira.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Gira"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="350"
      Title="Login" Background="White"
      xmlns:ui="http://schemas.modernwpf.com/2019">

    <Border Padding="15">
        <StackPanel>
            <TextBlock Text="Sign in to Gira"
                   Style="{StaticResource HeaderTextBlockStyle}"
                       HorizontalAlignment="Center"/>

            <TextBlock Text="Username / Email:" Margin="0 15 0 0"
                       Style="{StaticResource SubtitleTextBlockStyle}"/>
            <TextBox x:Name="tbxUsername"/>

            <TextBlock Text="Password:" Margin="0 25 0 0"
                       Style="{StaticResource SubtitleTextBlockStyle}"/>
            <PasswordBox x:Name="pbxPassword"/>

            <Button Content="Sign in"
                HorizontalAlignment="Center" 
                Margin="0 115 0 0"  
                Width="125"
                Height="32"
                VerticalAlignment="Bottom"
                Style="{StaticResource AccentButtonStyle}"/>
        </StackPanel>
    </Border>
</Page>
